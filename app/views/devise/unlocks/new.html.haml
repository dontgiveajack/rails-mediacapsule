.container
  .card.card-login.mx-auto.mt-5
    .card-header Resend unlock instructions
    .card-body
      .text-center.mb-4
        %h4 Didn't receive the account unlock email?
        %p Enter your email address and we will resend you instructions on how to unlock your account
        %p Make sure to check your spam folder as well
      = form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f|
        = devise_error_messages!
        .form-group
          .form-label-group
            = f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'Enter email address', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email)
            = f.label :email

        = f.submit "Resend unlock instructions", class: 'btn btn-primary btn-block'
        
      = render "devise/shared/links"


