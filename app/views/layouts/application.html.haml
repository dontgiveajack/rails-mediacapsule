!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width", :name => "viewport"}/
    %title Media Capsule - Dashboard
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  %body#page-top
    = render 'layouts/shared/top_nav'
    

    #wrapper
      = render 'layouts/shared/sidebar'

      #content-wrapper
        #flash
          = render 'layouts/shared/flash_message'

        -# %p.notice= notice
        -# %p.alert= alert
        
        = yield

        = render 'layouts/shared/footer'
      / /.content-wrapper


    / Scroll to Top Button
    %a.scroll-to-top.rounded{:href => "#page-top"}
      %i.fas.fa-angle-up


    #media-capsule-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "mediaCapsuleModal", :role => "dialog", :tabindex => "-1"}
      .modal-dialog{:role => "document"}
        .modal-content
          .modal-header
            %h5#exampleModalLabel.modal-title Modal title
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} &#215;
          .modal-body
            \...
          .modal-footer
            %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Close
            %button.btn.btn-primary{:type => "button"} Save changes


    / Logout Modal
    #logoutModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :role => "dialog", :tabindex => "-1"}
      .modal-dialog{:role => "document"}
        .modal-content
          .modal-header
            %h5#exampleModalLabel.modal-title Ready to Leave?
            %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
              %span{"aria-hidden" => "true"} Ã—
          .modal-body Select "Logout" below if you are ready to end your current session.
          .modal-footer
            %button.btn.btn-secondary{"data-dismiss" => "modal", :type => "button"} Cancel
            %a.btn.btn-primary{:href => destroy_user_session_path} Logout

