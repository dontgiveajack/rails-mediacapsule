.modal-dialog.modal-lg{role: "document"}
  .modal-content
    = form_for :node, url: batch_update_tenant_nodes_path, method: :patch, remote: true, html: {class: "modal-form form-horizontal move-items-form", role: 'form', multipart: false } do |f|
      .modal-header
        %h5.modal-title= page_title
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &#215;
      .modal-body
        - @folders.each do |folder|
          = hidden_field_tag 'tenant_folder_ids[]', folder.id

        - @media_items.each do |media_item|
          = hidden_field_tag 'tenant_media_item_ids[]', media_item.id

        -# = render 'error_messages', resource: resource
        -# - if method == 'delete'
        -#   = render 'delete_fields', f: f
        -# - else
        -#   = render 'form_fields', f: f
        -# = hidden_field_tag(:return_path, params[:return_path])  if params[:return_path].present?
        #move-tree
      .modal-footer
        %button.btn.btn-default{'data-dismiss' => 'modal', type: 'button'} Close
        %button.btn.btn-primary{type: 'submit', disabled: true} Move
